		<dependency>
			<groupId>com.iqser.core</groupId>
			<artifactId>iqser-core-plugin</artifactId>
			<version>${iqser.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.iqser.core</groupId>
			<artifactId>iqser-core-test</artifactId>
			<version>${iqser.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.iqser.gin.developer</groupId>
			<artifactId>plugin-test-api</artifactId>
			<version>${iqser.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.javacsv</groupId>
			<artifactId>javacsv</artifactId>
			<version>2.0</version>
		</dependency>
	</dependencies>

</project>
